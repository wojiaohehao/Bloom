<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/top_img1"
            android:src="@mipmap/hybag"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="强爸爸"
            android:textColor="#fff"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="-30dp"

            android:layout_below="@+id/top_img1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:paddingLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/head_img"
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
                <RelativeLayout
                    android:paddingLeft="30dp"
                    android:layout_alignBottom="@+id/head_img"
                    android:layout_toRightOf="@+id/head_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_feisi"
                        android:paddingRight="10dp"
                        android:text="14粉丝"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_toRightOf="@+id/tv_feisi"
                        android:text="14粉丝"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <Button
                        android:text="编辑个人资料"
                        android:layout_marginRight="10dp"
                        android:textColor="#E3B595"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/tv_feisi"
                        android:background="@drawable/but_style"
                        android:layout_width="220dp"
                        android:layout_height="35dp" />
                </RelativeLayout>

            </RelativeLayout>


        </LinearLayout>
    </RelativeLayout>
</LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="1.3"
        android:layout_height="0dp">
        <LinearLayout
           android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioGroup
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/rb_one"
                    android:textColor="@color/me_info_select_item"
                    android:checked="true"
                    android:gravity="center"
                    android:text="9作品"
                    android:button="@null"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
                <RadioButton
                    android:textColor="@color/me_info_select_item"
                    android:gravity="center"
                    android:text="9作品"
                    android:button="@null"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <RadioButton
                    android:textColor="@color/me_info_select_item"
                    android:gravity="center"
                    android:text="9作品"
                    android:button="@null"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
                <ImageView
                    android:paddingRight="10dp"
                    android:src="@mipmap/daohang"
                    android:layout_width="35dp"
                    android:layout_height="35dp" />
            </RadioGroup>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>